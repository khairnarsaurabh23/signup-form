  </head>
  <body class="bg-dark">
    <div class="container mt-4 bg-dark justify-cneter">
      <div class="card bg-white col-6">
        <div class="card-body ">
          <h2>Signup-form</h2>
          <form action="create" method="POST">
            <div class="form-group">
              <label for="firstName">First Name</label>
              <input type="text" class="form-control col-6 text-success" id="f_name" placeholder="Enter first name" name="f_name">
            </div>
            <div class="form-group">
              <label for="lastName">Last Name</label>
              <input type="text" class="form-control col-6 text-success" id="l_name"  placeholder="Enter last name" name="l_name">
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input type="text" class="form-control col-6 text-success" id="exampleInputEmail1"  name="email" placeholder="Enter email">
            </div>        
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" id="password" class="form-control col-6">
            </div>
            <button type="submit" class="btn btn-primary align-center">Submit</button>
          </form>
    </div>
  </div>
  </body>
</html>
