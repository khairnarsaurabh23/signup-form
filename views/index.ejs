  </head>
  <body class="">
    <div class="container mt-4 bg-dark justify-cneter">
      <div class="card bg-white col-6">
        <div class="card-body ">
          <h2>Signup-form</h2>
          <form action="/create" method="POST">
            <div class="form-group">
              <label for="rm_code">RM Code</label>
              <input type="text" class="form-control col-6 text-success" id="rm_code" placeholder="Enter RM Code" name="rm_code" required>
            </div>
            <div class="form-group">
              <label for="rm_name">RM Name</label>
              <input type="text" class="form-control col-6 text-success" id="rm_name"  placeholder="Enter RM Name" name="rm_name" required>
            </div>
            <div class="form-group">
              <label for="rm_type">RM Type</label>
              <input type="text" class="form-control col-6 text-success" id="rm_type"  name="rm_type" placeholder="Enter RM Type" required>
            </div>        
            <div class="form-group">
              <label for="description">Description</label>
              <input type="text" id="description"  name="description" class="form-control col-6"  placeholder="Enter Description" required>
            </div>
            <div class="form-group">
              <label for="department_id">Department Id</label>
              <input type="text" id="department_id" class="form-control col-6" placeholder="Enter Department ID" required>
            </div>
            <button type="submit" class="btn btn-primary align-center">Submit</button>
          </form>
    </div>
  </div>
  </body>
</html>
